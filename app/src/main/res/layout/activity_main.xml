<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#666666"
    android:padding="20dp"
    tools:context="com.coleapps.simplecalculator.MainActivity">

    <TextView
        android:id="@+id/history_text_view"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:background="#f2f2f2"
        android:textAlignment="viewEnd"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/calculation_text_field"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:background="#f2f2f2"
        android:textAlignment="viewEnd"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.221"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="303dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <Button
            android:id="@+id/period_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#00b300"
            android:text="."
            android:textSize="20dp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="276dp" />

        <Button
            android:id="@+id/clear_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/num_3"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:background="#00b300"
            android:text="C"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="276dp" />

        <Button
            android:id="@+id/plus_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#00b300"
            android:text="+"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="276dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/multiply_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#00b300"
            android:text="*"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="276dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/num_3"
            android:layout_alignStart="@+id/num_3" />

        <Button
            android:id="@+id/division_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#00b300"
            android:text="/"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="276dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/clear_button"
            android:layout_alignStart="@+id/clear_button" />

        <Button
            android:id="@+id/num_3"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#00b300"
            android:text="3"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="276dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/minus_button"
            android:layout_toRightOf="@+id/num_2"
            android:layout_toEndOf="@+id/num_2"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />

        <Button
            android:id="@+id/num_8"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/num_7"
            android:layout_alignBottom="@+id/num_7"
            android:layout_alignLeft="@+id/num_5"
            android:layout_alignStart="@+id/num_5"
            android:background="#00b300"
            android:text="8"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="276dp" />

        <Button
            android:id="@+id/num_6"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/num_4"
            android:layout_alignBottom="@+id/num_4"
            android:layout_alignLeft="@+id/num_9"
            android:layout_alignStart="@+id/num_9"
            android:background="#00b300"
            android:text="6"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="276dp" />

        <Button
            android:id="@+id/equals_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#00b300"
            android:text="="
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="276dp"
            android:layout_alignTop="@+id/num_6"
            android:layout_alignLeft="@+id/clear_button"
            android:layout_alignStart="@+id/clear_button"
            android:layout_alignBottom="@+id/num_9" />

        <Button
            android:id="@+id/num_0"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#00b300"
            android:text="0"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="276dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/num_8"
            android:layout_alignStart="@+id/num_8" />

        <Button
            android:id="@+id/num_7"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/num_4"
            android:layout_marginTop="13dp"
            android:background="#00b300"
            android:text="7"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="276dp" />

        <Button
            android:id="@+id/num_4"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/num_1"
            android:layout_marginTop="15dp"
            android:background="#00b300"
            android:text="4"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="276dp" />

        <Button
            android:id="@+id/num_5"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/num_6"
            android:layout_alignBottom="@+id/num_6"
            android:layout_alignLeft="@+id/num_2"
            android:layout_alignStart="@+id/num_2"
            android:background="#00b300"
            android:text="5"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="276dp" />

        <Button
            android:id="@+id/num_9"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/num_8"
            android:layout_alignBottom="@+id/num_8"
            android:layout_alignLeft="@+id/num_3"
            android:layout_alignStart="@+id/num_3"
            android:background="#00b300"
            android:text="9"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="276dp" />

        <Button
            android:id="@+id/minus_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#00b300"
            android:text="-"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="208dp"
            tools:layout_editor_absoluteY="276dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/num_3"
            android:layout_toStartOf="@+id/num_3" />

        <Button
            android:id="@+id/num_1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/num_2"
            android:layout_alignBottom="@+id/num_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#00b300"
            android:text="1"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="109dp"
            tools:layout_editor_absoluteY="279dp" />

        <Button
            android:id="@+id/num_2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/num_3"
            android:layout_alignBottom="@+id/num_3"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/num_1"
            android:layout_toRightOf="@+id/num_1"
            android:background="#00b300"
            android:text="2"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="274dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
